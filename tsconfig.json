{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": "./src/",
    "paths": {
      "@config/*": ["./config/*"],
      "@app": ["./app"],
      "@app/*": ["./app/*"],
      "@routes": ["./routes"],
      "@features/*": ["./features/*"],
      "@store": ["./store"],
      "@reducers": ["./reducers"],
      "@sagas": ["./sagas"],
      "@style": ["./style"],
      "@style/*": ["./style/*"]
    }
  },
  "include": [
    "src",
    "global.t.ts"
  ],
  "exclude": [
    "node_modules",
    "./node_modules/*"
  ]
}
